import random


name = "Chris "

question = " will the weather be good today"

answer = ""

random_number = random.randint(1,10)
print(random_number)
print(name +  "asks:" + question)
print("Magic 8-Ball's answer:" + answer)
if (random_number) == 1:
  print("Outcome seems yes")
elif (random_number) == 2:
  print("outcome seems no")
elif (random_number) == 3:
  print("The universe points to yes")
elif (random_number) == 4:
  print("Not Sure")
elif (random_number) == 5:
  print("Try again")
elif (random_number) == 6:
  print("You probably wouldn't want to know")
elif (random_number) == 7:
  print("My Data Says most likely")
elif (random_number) == 8:
  print("Outlook not very good")
elif (random_number) == 9:
  print("Maybe you shouldn't do it")
elif (random_number) == 10:
  print("Absolutely not")
else:
  answer = "Error"

